{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "properties": {
    "name": {
      "type": "string",
      "description": "The name of the test"
    },
    "steps": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "action": {
            "type": "string",
            "enum": [
              "LOAD_URL",
              "ASSERT",
              "CLICK",
              "FILL",
              "WAIT_FOR_ELEMENT",
              "SCREENSHOT",
              "RUN_FASTPASS",
              "PAGE_TYPE"
            ]
          },
          "url": {
            "type": "string",
            "minLength": 1
          },
          "state": {
            "type": "string",
            "enum": ["visible", "hidden", "enable"]
          },
          "selector": {
            "type": "string",
            "minLength": 1
          },
          "nthChild": {
            "type": "integer"
          },
          "timeout": {
            "type": "integer",
            "minimum": 0
          },
          "text": {
            "type": "string"
          },
          "iFrameSelector": {
            "type": "string"
          },
          "screenshotFileName": {
            "type": "string"
          }
        },
        "required": [],
        "if": {
          "properties": {
            "action": { "const": "LOAD_URL" }
          }
        },
        "then": {
          "required": ["url"]
        },
        "else": {
          "if": {
            "properties": {
              "action": { "const": "ASSERT" }
            }
          },
          "then": {
            "required": ["state", "selector", "timeout"]
          },
          "else": {
            "if": {
              "properties": {
                "action": { "const": "CLICK" }
              }
            },
            "then": {
              "required": ["selector"]
            },
            "else": {
              "if": {
                "properties": {
                  "action": { "const": "SCREENSHOT" }
                }
              },
              "then": {
                "required": ["selector", "screenshotFileName", "timeout"]
              },
              "else": {
                "if": {
                  "properties": {
                    "action": { "const": "RUN_FASTPASS" }
                  }
                },
                "then": {
                  "required": ["selector", "screenshotFileName", "timeout"],
                  "default": {
                    "selector": "your-selector",
                    "screenshotFileName": "file name with out extesion",
                    "timeout": 1000
                  }
                },
                "else": {
                  "if": {
                    "properties": {
                      "action": { "const": "FILL" }
                    }
                  },
                  "then": {
                    "required": ["selector", "text"]
                  }
                }
              }
            }
          }
        }
      }
    }
  }
}
